<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullan覺c覺 emaili"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#DC2828"></TextView>

    <ImageView
        android:id="@+id/recycler_row_imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>
    <TextView
        android:id="@+id/recycler_row_kullanici_yorum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullan覺c覺 yorumu"
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:textColor="#DC2828"></TextView>


</LinearLayout>