<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86B1C5"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/emailText"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="GİRİŞ SAYFASI"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kayıtOl"
        android:layout_width="136dp"
        android:layout_height="52dp"
        android:layout_marginTop="57dp"
        android:onClick="kayitOl"
        android:text="Kayıt Ol"
        app:layout_constraintEnd_toEndOf="@+id/paswordText"
        app:layout_constraintTop_toBottomOf="@+id/paswordText" />

    <Button
        android:id="@+id/girisYap"
        android:layout_width="136dp"
        android:layout_height="52dp"
        android:layout_marginTop="57dp"
        android:onClick="girisYap"
        android:text="Giris yap"
        app:layout_constraintStart_toStartOf="@+id/paswordText"
        app:layout_constraintTop_toBottomOf="@+id/paswordText" />

    <EditText
        android:id="@+id/paswordText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/emailText"
        app:layout_constraintStart_toStartOf="@+id/emailText"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

</androidx.constraintlayout.widget.ConstraintLayout>